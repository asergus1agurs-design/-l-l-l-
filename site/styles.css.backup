/* YouTube Live Card (extends live-card styles) */
#youtubeCard.live-card {
    background: linear-gradient(135deg, rgba(255, 0, 0, 0.1), rgba(200, 0, 0, 0.05));
    border-color: rgba(255, 0, 0, 0.3);
}

#youtubeCard .live-badge {
    background: #ff0000;
    box-shadow: 0 0 0 3px rgba(255, 0, 0, 0.25);
}

#youtubeCard .watch-btn {
    background: linear-gradient(135deg, #ff0000, #cc0000);
}

/* Twitch Status Panel */
.twitch-status-card {
    background: rgba(15, 23, 42, 0.6);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: 16px;
    padding: 24px;
    margin-top: 32px;
}

.status-controls {
    display: flex;
    gap: 12px;
    margin-bottom: 20px;
}

.status-controls input {
    flex: 1;
    background: rgba(30, 41, 59, 0.8);
    border: 1px solid rgba(99, 102, 241, 0.3);
    color: #e2e8f0;
    padding: 12px 16px;
    border-radius: 12px;
}

.status-controls button {
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 12px;
    cursor: pointer;
    font-weight: 600;
}

.stream-status-display {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

#streamStatus {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 600;
}

.status-online {
    color: #22c55e;
}

.status-offline {
    color: #ef4444;
}

.status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    display: inline-block;
}

.status-online .status-dot {
    background: #22c55e;
    animation: pulse 2s infinite;
}

.status-offline .status-dot {
    background: #ef4444;
}

.stream-stats {
    display: flex;
    gap: 24px;
}

.stat {
    display: flex;
    gap: 8px;
    align-items: center;
}

.stat-label {
    color: #94a3b8;
}

.stat-value {
    font-weight: 700;
    color: #f8fafc;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

/* Messenger Widget Styles */
.messenger-widget {
  position: fixed;
  bottom: 20px;
  right: 20px;
  width: 350px;
  height: 500px;
  background: rgba(15, 23, 42, 0.95);
  border: 1px solid rgba(99, 102, 241, 0.3);
  border-radius: 16px;
  backdrop-filter: blur(20px);
  box-shadow: 
    0 20px 40px rgba(0, 0, 0, 0.4),
    0 0 0 1px rgba(255, 255, 255, 0.1);
  display: flex;
  flex-direction: column;
  z-index: 1000;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.messenger-widget.collapsed {
  height: 60px;
}

.messenger-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
  border-bottom: 1px solid rgba(99, 102, 241, 0.2);
}

.messenger-title {
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: 600;
  color: #e2e8f0;
  font-size: 14px;
}

.messenger-icon {
  font-size: 16px;
}

.messenger-toggle {
  background: none;
  border: none;
  color: #94a3b8;
  cursor: pointer;
  padding: 4px;
  border-radius: 4px;
  transition: all 0.2s;
}

.messenger-toggle:hover {
  color: #e2e8f0;
  background: rgba(99, 102, 241, 0.2);
}

.toggle-icon {
  font-size: 18px;
  transition: transform 0.3s;
}

.messenger-widget.collapsed .toggle-icon {
  transform: rotate(180deg);
}

.messenger-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: calc(100% - 60px);
}

.messenger-messages {
  flex: 1;
  overflow-y: auto;
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.messenger-messages::-webkit-scrollbar {
  width: 4px;
}

.messenger-messages::-webkit-scrollbar-track {
  background: rgba(99, 102, 241, 0.1);
  border-radius: 2px;
}

.messenger-messages::-webkit-scrollbar-thumb {
  background: rgba(99, 102, 241, 0.5);
  border-radius: 2px;
}

.message {
  display: flex;
  flex-direction: column;
  max-width: 80%;
}

.message.system {
  max-width: 100%;
  align-items: center;
}

.message-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.message-text {
  padding: 12px 16px;
  border-radius: 18px;
  font-size: 14px;
  line-height: 1.4;
  word-wrap: break-word;
}

.message.system .message-text {
  background: rgba(99, 102, 241, 0.2);
  color: #94a3b8;
  font-size: 12px;
  padding: 8px 12px;
  text-align: center;
}

.message.user {
  align-self: flex-end;
}

.message.user .message-text {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: white;
}

.message-time {
  font-size: 11px;
  color: #64748b;
  align-self: flex-end;
}

.messenger-input-container {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 16px;
  border-top: 1px solid rgba(99, 102, 241, 0.2);
  background: rgba(15, 23, 42, 0.8);
}

#messengerInput {
  flex: 1;
  background: rgba(30, 41, 59, 0.8);
  border: 1px solid rgba(99, 102, 241, 0.3);
  border-radius: 24px;
  padding: 12px 16px;
  color: #e2e8f0;
  font-size: 14px;
  outline: none;
  transition: all 0.2s;
}

#messengerInput:focus {
  border-color: #6366f1;
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

#messengerInput::placeholder {
  color: #64748b;
}

.messenger-send {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s;
}

.messenger-send:hover:not(:disabled) {
  transform: scale(1.05);
  box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
}

.messenger-send:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.send-icon {
  color: white;
  font-size: 14px;
}

/* Mobile responsiveness for messenger */
@media (max-width: 480px) {
  .messenger-widget {
    width: calc(100vw - 20px);
    height: 60vh;
    bottom: 10px;
    right: 10px;
    left: 10px;
  }
}

@media (max-width: 768px) and (min-width: 481px) {
  .messenger-widget {
    width: 320px;
    height: 450px;
  }
}

/* Discord-style Chat Interface */
.discord-chat {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  z-index: 1000;
  font-family: 'Whitney', 'Inter', system-ui, -apple-system, sans-serif;
}

/* Authentication Modal */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  backdrop-filter: blur(5px);
}

.auth-container {
  background: #36393f;
  border-radius: 8px;
  padding: 32px;
  width: 100%;
  max-width: 480px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
}

.auth-header {
  text-align: center;
  margin-bottom: 24px;
}

.auth-header h2 {
  color: #fff;
  font-size: 24px;
  font-weight: 600;
  margin: 0 0 8px 0;
}

.auth-header p {
  color: #b9bbbe;
  font-size: 16px;
  margin: 0;
}

.auth-tabs {
  display: flex;
  margin-bottom: 24px;
  border-bottom: 1px solid #40444b;
}

.auth-tab {
  flex: 1;
  background: none;
  border: none;
  color: #b9bbbe;
  padding: 12px;
  cursor: pointer;
  font-size: 16px;
  transition: all 0.2s;
}

.auth-tab.active {
  color: #fff;
  border-bottom: 2px solid #5865f2;
}

.auth-form {
  display: none;
}

.auth-form.active {
  display: block;
}

.form-group {
  margin-bottom: 16px;
}

.form-group label {
  display: block;
  color: #b9bbbe;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  margin-bottom: 8px;
}

.form-group input {
  width: 100%;
  background: #40444b;
  border: 1px solid #040405;
  border-radius: 4px;
  padding: 12px;
  color: #fff;
  font-size: 16px;
  transition: border-color 0.2s;
}

.form-group input:focus {
  outline: none;
  border-color: #5865f2;
}

.auth-btn {
  width: 100%;
  background: #5865f2;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 12px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.2s;
}

.auth-btn:hover {
  background: #4752c4;
}

/* Discord Main Layout */
.discord-main {
  display: flex;
  width: 100%;
  height: 100vh;
  background: #36393f;
}

/* Server List */
.discord-servers {
  width: 72px;
  background: #202225;
  padding: 12px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.server-icon {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  margin-bottom: 8px;
  cursor: pointer;
  transition: border-radius 0.2s;
  overflow: hidden;
}

.server-icon.active {
  border-radius: 16px;
}

.server-icon img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Channel List */
.discord-channels {
  width: 240px;
  background: #2f3136;
  display: flex;
  flex-direction: column;
}

.channel-header {
  padding: 16px;
  border-bottom: 1px solid #40444b;
}

.channel-header h3 {
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  margin: 0;
}

.channel-list {
  flex: 1;
  padding: 16px 8px;
}

.channel-category {
  margin-bottom: 16px;
}

.category-name {
  color: #8e9297;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  margin: 16px 8px 4px 8px;
  letter-spacing: 0.02em;
}

.channel {
  display: flex;
  align-items: center;
  padding: 6px 8px;
  margin-bottom: 1px;
  color: #8e9297;
  cursor: pointer;
  border-radius: 4px;
  transition: all 0.15s ease;
  position: relative;
}

.voice-channel {
  display: flex;
  align-items: center;
  padding: 8px 12px;
  margin-bottom: 2px;
  color: #8e9297;
  cursor: pointer;
  border-radius: 4px;
  font-size: 14px;
  transition: all 0.2s ease;
  position: relative;
}

.voice-channel:hover {
  background: rgba(79, 84, 92, 0.16);
  color: #dcddde;
  transform: translateX(2px);
}

.voice-users {
  margin-left: auto;
  font-size: 12px;
  color: #72767d;
  background: rgba(79, 84, 92, 0.32);
  padding: 2px 6px;
  border-radius: 10px;
}

.voice-channel.connected {
  background: rgba(88, 101, 242, 0.2);
  color: #5865f2;
  border-left: 3px solid #3ba55d;
  padding-left: 9px;
}

.voice-channel.connected .channel-icon {
  color: #3ba55d;
}

.voice-channel .channel-icon {
  margin-right: 8px;
  font-size: 16px;
  transition: color 0.2s ease;
  filter: grayscale(100%);
}

.voice-channel:hover .channel-icon {
  filter: grayscale(0%);
}

.voice-channel.connected .channel-icon {
  filter: grayscale(0%);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.7; }
  100% { opacity: 1; }
}

.channel:hover {
  background: rgba(79, 84, 92, 0.16);
  color: #dcddde;
}

.channel.active {
  background: rgba(79, 84, 92, 0.32);
  color: #fff;
  position: relative;
}

.channel.active::before {
  content: '';
  position: absolute;
  left: -8px;
  top: 50%;
  transform: translateY(-50%);
  width: 3px;
  height: 20px;
  background: #5865f2;
  border-radius: 0 2px 2px 0;
}

.unread-badge {
  margin-left: auto;
  background: #5865f2;
