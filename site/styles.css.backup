  color: #b9bbbe;
  cursor: pointer;
  padding: 2px;
  font-size: 12px;
  transition: color 0.2s;
}

.status-btn:hover, .settings-btn:hover {
  color: #fff;
}

.channel-icon {
  margin-right: 8px;
  font-size: 16px;
}

.user-panel {
  padding: 16px;
  background: #292b2f;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-info img {
  width: 32px;
  height: 32px;
  border-radius: 50%;
