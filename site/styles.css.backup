/* ULTRA PREMIUM $50,000 DESIGN */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');

:root {
  --primary-900: #0a0a0f;
  --primary-800: #1a1a2e;
  --primary-700: #16213e;
  --accent-400: #667eea;
  --accent-500: #8b5cf6;
  --accent-600: #3b82f6;
  --glass-white: rgba(255, 255, 255, 0.1);
  --glass-border: rgba(255, 255, 255, 0.2);
  --gold: #ffd700;
  --silver: #c0c0c0;
}

* { 
    box-sizing: border-box;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

html, body { height: 100%; }

body {
  margin: 0;
  font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  font-size: 16px;
  color: #e2e8f0;
  background: 
    radial-gradient(ellipse 1200px 800px at 50% -20%, rgba(120, 119, 198, 0.3), transparent 50%),
    radial-gradient(ellipse 800px 600px at 80% 100%, rgba(255, 119, 198, 0.15), transparent 50%),
    radial-gradient(ellipse 600px 400px at 20% 80%, rgba(139, 92, 246, 0.2), transparent 50%),
    linear-gradient(135deg, #0a0a0f 0%, #1a1a2e 25%, #16213e 50%, #0f3460 75%, #0a0a0f 100%);
  line-height: 1.6;
  overflow-x: hidden;
  min-height: 100vh;
}

/* Premium Background */
.bg { 
    position: fixed; 
    inset: 0; 
    z-index: -1; 
    overflow: hidden;
    perspective: 3000px;
}

.bg-gradient { 
  position: absolute; 
  inset: -30%; 
  background: 
    radial-gradient(1200px 800px at 15% -20%, rgba(99, 102, 241, 0.15), transparent 60%),
    radial-gradient(1000px 700px at 85% 120%, rgba(168, 85, 247, 0.12), transparent 60%),
    radial-gradient(800px 600px at 50% 50%, rgba(59, 130, 246, 0.1), transparent 70%),
    linear-gradient(135deg, #0f172a 0%, #1e293b 25%, #0f172a 50%, #334155 75%, #0f172a 100%);
  filter: saturate(80%) brightness(0.8);
  animation: bgFloat 20s ease-in-out infinite;
  transform: translateZ(0) rotateX(1deg) rotateY(0.5deg);
}
.bg-orb { 
  position: absolute; 
  width: 600px; 
  height: 600px; 
  border-radius: 50%; 
  filter: blur(80px) saturate(200%); 
  opacity: 0.6; 
  transform-style: preserve-3d;
  animation: orbGlow 4s ease-in-out infinite;
}

/* Icon utility */
.icon { width: 20px; height: 20px; display: inline-block; vertical-align: -3px; filter: drop-shadow(0 1px 1px rgba(0,0,0,0.25)); }
.orb-1 { 
  background: linear-gradient(45deg, #6366f1, #8b5cf6);
  top: 20%; 
  left: -10%; 
  animation: orb1 25s ease-in-out infinite;
  transform: translateZ(100px) rotateX(15deg) rotateY(25deg);
  box-shadow: 
    0 0 200px rgba(99, 102, 241, 0.3),
    0 0 400px rgba(139, 92, 246, 0.2),
    inset 0 0 100px rgba(255, 255, 255, 0.1);
  opacity: 0.4;
}
.orb-2 { 
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  bottom: -10%; 
  right: -10%; 
  animation: orb2 30s ease-in-out infinite;
  transform: translateZ(-50px) rotateX(-10deg) rotateY(-20deg);
  box-shadow: 
    0 0 250px rgba(59, 130, 246, 0.25),
    0 0 500px rgba(29, 78, 216, 0.15),
    inset 0 0 100px rgba(255, 255, 255, 0.1);
  opacity: 0.4;
}
.bg-particles { position: absolute; inset: 0; width: 100%; height: 100%; transform: translateZ(75px); }
.bg-noise { 
  position: absolute; 
  inset: 0; 
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="300" height="300" viewBox="0 0 300 300"><filter id="n"><feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="4" stitchTiles="stitch"/></filter><rect width="100%" height="100%" filter="url(%23n)" opacity="0.08"/></svg>'); 
  opacity: 0.7; 
  mix-blend-mode: overlay; 
  transform: translateZ(25px);
  animation: noiseShift 15s linear infinite;
}
.cursor-spotlight { 
  position: absolute; 
  width: 400px; 
  height: 400px; 
  border-radius: 50%; 
  pointer-events: none; 
  background: radial-gradient(closest-side, rgba(99, 102, 241, 0.15), rgba(168, 85, 247, 0.1) 40%, transparent 70%); 
  mix-blend-mode: overlay; 
  transform: translate(-50%, -50%) translateZ(120px); 
  opacity: 0.6; 
  filter: blur(2px);
}
.cursor-trail { position: absolute; inset: 0; width: 100%; height: 100%; pointer-events: none; z-index: 1; transform: translateZ(100px); }

/* Ultra-smooth cyberpunk animations */
@keyframes bgFloat { 
  0%,100% { transform: translateY(0) rotateX(3deg) rotateY(1deg) scale(1); } 
  50% { transform: translateY(-2%) rotateX(4deg) rotateY(2deg) scale(1.02); } 
}
@keyframes bgPulse { 
  0%,100% { filter: saturate(150%) brightness(1.2) hue-rotate(0deg); } 
  50% { filter: saturate(200%) brightness(1.4) hue-rotate(15deg); } 
}
@keyframes orb1 { 
  0%,100% { transform: translate(0,0) translateZ(150px) rotateX(20deg) rotateY(30deg) rotateZ(0deg); } 
  50% { transform: translate(10%, -8%) translateZ(200px) rotateX(25deg) rotateY(40deg) rotateZ(10deg); } 
}
@keyframes orb2 { 
  0%,100% { transform: translate(0,0) translateZ(-100px) rotateX(-15deg) rotateY(-25deg) rotateZ(0deg); } 
  50% { transform: translate(-8%, 10%) translateZ(-150px) rotateX(-20deg) rotateY(-35deg) rotateZ(-10deg); } 
}
@keyframes orbGlow { 
  0%,100% { opacity: 0.6; filter: blur(80px) saturate(200%); } 
  50% { opacity: 0.8; filter: blur(100px) saturate(250%); } 
}
@keyframes orbPulse1 { 
  0%,100% { box-shadow: 0 0 300px rgba(255, 0, 128, 0.8), 0 0 600px rgba(255, 140, 0, 0.4), inset 0 0 200px rgba(255, 255, 255, 0.2); } 
  50% { box-shadow: 0 0 400px rgba(255, 0, 128, 1), 0 0 800px rgba(255, 140, 0, 0.6), inset 0 0 250px rgba(255, 255, 255, 0.3); } 
}
@keyframes orbPulse2 { 
  0%,100% { box-shadow: 0 0 400px rgba(0, 255, 255, 0.7), 0 0 800px rgba(128, 0, 255, 0.3), inset 0 0 150px rgba(255, 255, 255, 0.15); } 
  50% { box-shadow: 0 0 500px rgba(0, 255, 255, 0.9), 0 0 1000px rgba(128, 0, 255, 0.5), inset 0 0 200px rgba(255, 255, 255, 0.25); } 
}
@keyframes noiseShift { 
  0% { transform: translateZ(25px) translateX(0) translateY(0); } 
  100% { transform: translateZ(25px) translateX(-10px) translateY(-10px); } 
}
@keyframes spotlightPulse { 
  0%,100% { opacity: 0.8; transform: translate(-50%, -50%) translateZ(120px) scale(1); } 
  50% { opacity: 1; transform: translate(-50%, -50%) translateZ(140px) scale(1.1); } 
}
@keyframes topbarGlow {
  0%,100% { box-shadow: 0 8px 32px rgba(0,0,0,0.6), inset 0 1px 0 rgba(255,255,255,0.15), 0 0 40px rgba(0, 255, 255, 0.1); }
  50% { box-shadow: 0 8px 32px rgba(0,0,0,0.6), inset 0 1px 0 rgba(255,255,255,0.15), 0 0 60px rgba(0, 255, 255, 0.2); }
}
@keyframes brandPulse {
  0%,100% { box-shadow: 0 0 20px rgba(255, 0, 128, 0.5); transform: scale(1); }
  50% { box-shadow: 0 0 30px rgba(255, 0, 128, 0.8); transform: scale(1.05); }
}
@keyframes sidebarGlow {
  0%,100% { box-shadow: 8px 0 32px rgba(0,0,0,0.5), inset 1px 0 0 rgba(255,255,255,0.1), 0 0 60px rgba(0, 255, 255, 0.1); }
  50% { box-shadow: 8px 0 32px rgba(0,0,0,0.5), inset 1px 0 0 rgba(255,255,255,0.1), 0 0 80px rgba(0, 255, 255, 0.2); }
}
@keyframes btnGlow1 { 
  0%,100% { box-shadow: 0 15px 35px rgba(0,0,0,0.4), 0 0 30px rgba(99, 102, 241, 0.3); } 
  50% { box-shadow: 0 20px 45px rgba(0,0,0,0.5), 0 0 40px rgba(99, 102, 241, 0.5); } 
}
@keyframes btnGlow2 { 
  0%,100% { box-shadow: 0 15px 35px rgba(0,0,0,0.4), 0 0 30px rgba(255,0,128,0.3); } 
  50% { box-shadow: 0 20px 45px rgba(0,0,0,0.5), 0 0 40px rgba(255,0,128,0.5); } 
}
@keyframes avatarGlow {
  0%,100% { box-shadow: 0 20px 60px rgba(0,0,0,0.5), 0 0 0 4px rgba(0,255,255,0.3), 0 0 40px rgba(0,255,255,0.2); }
  50% { box-shadow: 0 20px 60px rgba(0,0,0,0.5), 0 0 0 4px rgba(0,255,255,0.6), 0 0 60px rgba(0,255,255,0.4); }
}

.page { min-height: 100%; display: grid; grid-template-rows: auto 1fr auto; }

/* Modern glassmorphism topbar */
.topbar {
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 24px;
  background: rgba(15, 23, 42, 0.85);
  backdrop-filter: blur(20px) saturate(180%);
  border-bottom: 1px solid rgba(99, 102, 241, 0.2);
  box-shadow: 0 8px 32px rgba(0,0,0,0.6), inset 0 1px 0 rgba(255,255,255,0.15);
}
.topbar-left, .topbar-right { display: flex; align-items: center; gap: 12px; }
.topbar-left { justify-content: flex-start; }
.topbar-right { justify-content: flex-end; }
.topbar-center { display: flex; justify-content: center; }
.brand { display: inline-flex; align-items: center; justify-content: center; width: 32px; height: 32px; }
.brand-mark { 
  width: 28px; 
  height: 28px; 
  background: linear-gradient(45deg, #6366f1, #8b5cf6); 
  clip-path: polygon(0 0, 80% 0, 100% 20%, 100% 100%, 0 100%); 
  border-radius: 6px;
  box-shadow: 0 0 15px rgba(99, 102, 241, 0.3);
}
.nav-link { 
  color: #f1f5f9; 
  text-decoration: none; 
  padding: 10px 16px; 
  border-radius: 12px; 
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}
.nav-link::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(45deg, rgba(0, 255, 255, 0.1), rgba(255, 0, 128, 0.1));
  opacity: 0;
  transition: opacity 0.3s ease;
}
.nav-link.active, .nav-link:hover { 
  background: rgba(99, 102, 241, 0.15);
  box-shadow: 0 0 15px rgba(99, 102, 241, 0.2);
  transform: translateY(-1px);
}
.nav-link.active::before, .nav-link:hover::before { opacity: 1; }
.search { width: 100%; max-width: 480px; }
.search input {
  width: 100%;
  padding: 8px 16px;
  background: rgba(15, 23, 42, 0.8);
  border: 1px solid rgba(99, 102, 241, 0.3);
  border-radius: 12px;
  color: #e2e8f0;
  font-size: 14px;
  transition: all 0.3s ease;
}
.search input:focus {
  outline: none;
  border-color: rgba(99, 102, 241, 0.6);
  box-shadow: 0 0 15px rgba(99, 102, 241, 0.2);
}
.layout { 
  display: flex;
  flex: 1;
}

.content-section {
  margin-top: 32px;
  padding: 32px;
  background: rgba(15, 23, 42, 0.6);
  backdrop-filter: blur(20px);
  border-radius: 20px;
  border: 1px solid rgba(99, 102, 241, 0.2);
  box-shadow: 0 10px 40px rgba(0,0,0,0.4);
}

.content-section.sidebar {
  width: 280px;
  padding: 20px;
  background: rgba(15, 23, 42, 0.5);
  backdrop-filter: blur(20px) saturate(150%);
  border-right: 1px solid rgba(99, 102, 241, 0.2);
  box-shadow: inset -1px 0 0 rgba(255,255,255,0.1);
  position: relative;
  overflow: hidden;
}

.content-section p {
  margin-bottom: 16px;
  line-height: 1.4;
  color: #ffffff;
  font-family: 'VT323', monospace;
  font-size: 20px;
  text-shadow: 1px 1px 0 rgba(0,0,0,0.5);
}

.side-item { 
  display: grid; 
  grid-template-columns: 48px 1fr; 
  align-items: center; 
  gap: 12px;
  padding: 12px 14px;
  margin: 8px 0;
  border-radius: 12px;
  background: rgba(99, 102, 241, 0.08);
  border: 1px solid rgba(99, 102, 241, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.side-item:hover { 
  background: rgba(99, 102, 241, 0.15);
  transform: translateX(4px);
  box-shadow: 0 8px 25px rgba(99, 102, 241, 0.2);
}

/* Minecraft Buttons */
button, .btn, a {
  image-rendering: pixelated;
  font-family: 'VT323', monospace;
  text-transform: uppercase;
}

/* Icon cards grid */
.icon-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 16px;
}

.icon-card {
  display: grid;
  grid-template-columns: 64px 1fr;
  align-items: center;
  gap: 16px;
  padding: 16px 18px;
  border-radius: 20px;
  text-decoration: none;
  background: rgba(15, 15, 35, 0.4);
  backdrop-filter: blur(20px) saturate(180%);
  box-shadow: 0 15px 35px rgba(0,0,0,0.4);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  outline: 1px solid rgba(0, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.icon-card::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(45deg, rgba(0, 255, 255, 0.1), rgba(255, 0, 128, 0.1));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.icon-card:hover { 
  transform: translateY(-6px) translateZ(30px) rotateX(8deg) rotateY(2deg); 
  box-shadow: 0 25px 50px rgba(0,0,0,0.6), 0 0 60px rgba(0, 255, 255, 0.4); 
  outline-color: rgba(0, 255, 255, 0.4);
}

.icon-card:hover::before { opacity: 1; }

.icon-wrap {
  width: 64px;
  height: 64px;
  border-radius: 18px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: rgba(20, 20, 40, 0.8);
  box-shadow: 
    inset 0 0 0 1px rgba(0, 255, 255, 0.3), 
    0 10px 30px rgba(0,0,0,0.4);
  transform-style: preserve-3d;
  transition: all 0.4s ease;
  backdrop-filter: blur(10px);
}

.icon-emoji {
  font-size: 32px;
  filter: drop-shadow(0 4px 8px rgba(0,0,0,0.4));
}
.icon-card:hover .icon-wrap { 
  transform: translateZ(15px) rotateY(15deg) rotateX(8deg) scale(1.1); 
  box-shadow: 
    inset 0 0 0 1px rgba(0, 255, 255, 0.6), 
    0 15px 40px rgba(0,0,0,0.6),
    0 0 30px rgba(0, 255, 255, 0.4);
}
.icon-card.twitch .icon-wrap { background: linear-gradient(135deg, #9146FF, #6366f1); }
.icon-card.discord .icon-wrap { background: linear-gradient(135deg, #5865F2, #4338ca); }
.icon-card.donatello .icon-wrap { background: linear-gradient(135deg, #FF8A00, #FF3D00); }
.icon-card.cristalix .icon-wrap { background: linear-gradient(135deg, #f59e0b, #ef4444); }

.icon-svg { 
  width: 28px; 
  height: 28px; 
  filter: drop-shadow(0 2px 4px rgba(0,0,0,0.4)); 
  transform-style: preserve-3d; 
  transition: all 0.4s ease; 
}
.icon-card:hover .icon-svg { 
  transform: translateZ(8px) rotateY(20deg) scale(1.15); 
  filter: drop-shadow(0 4px 8px rgba(0,0,0,0.6)) drop-shadow(0 0 15px rgba(0,255,255,0.3));
}
.icon-label { 
  color: #f1f5f9; 
  font-weight: 800; 
  letter-spacing: 0.4px; 
  text-shadow: 0 2px 4px rgba(0,0,0,0.5); 
  transform-style: preserve-3d; 
  transition: all 0.4s ease; 
  font-size: 16px;
}
.icon-card:hover .icon-label { 
  transform: translateZ(8px) translateX(4px); 
  color: #ffffff;
  text-shadow: 0 2px 4px rgba(0,0,0,0.5), 0 0 10px rgba(0,255,255,0.3);
}

@media (min-width: 720px) {
  .icon-grid { grid-template-columns: repeat(3, minmax(0, 1fr)); }
}
@media (min-width: 1024px) {
  .icon-grid { grid-template-columns: repeat(4, minmax(0, 1fr)); }
}

/* Live stream preview */
.live-preview { margin-top: -8px; }
.live-card { display: grid; grid-template-columns: 2fr 1fr; gap: 16px; background: linear-gradient(180deg, rgba(255,255,255,0.08), rgba(255,255,255,0.04)); border-radius: 18px; overflow: hidden; outline: 1px solid rgba(255,255,255,0.06); box-shadow: 0 14px 34px rgba(0,0,0,0.35); transform-style: preserve-3d; transition: transform 0.3s ease; }
.live-card:hover { transform: translateZ(25px) rotateX(3deg) rotateY(2deg); box-shadow: 0 20px 40px rgba(0,0,0,0.45), 0 0 50px rgba(239,68,68,0.3); }
.thumb-wrap { position: relative; min-height: 160px; background: #0e0e10; }
.thumb-wrap img { width: 100%; height: 100%; object-fit: cover; display: block; }
.live-pill { position: absolute; top: 12px; left: 12px; background: #ef4444; color: #fff; font-weight: 900; font-size: 12px; letter-spacing: .6px; border-radius: 999px; padding: 6px 10px; box-shadow: 0 0 0 3px rgba(239,68,68,0.25); }
.live-info { display: grid; gap: 10px; align-content: center; padding: 16px; }
.live-title { margin: 0; font-size: 18px; color: #f8fafc; }

@media (max-width: 720px) {
  .live-card { grid-template-columns: 1fr; }
}

/* Модальное окно */
#donateModal {
  position: fixed;
  inset: 0;
  background: rgba(2, 6, 23, 0.6);
  backdrop-filter: blur(4px);
  display: none;
  z-index: 1000;
}
#mainPage {
  display: block;
}

.modal-content {
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20px);
  margin: 15% auto;
  padding: 30px;
  border-radius: 20px;
  width: 90%;
  max-width: 500px;
  position: relative;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(99, 102, 241, 0.3);
  animation: slideIn 0.3s ease;
}

.modal-content h2 {
  color: #f1f5f9;
  margin-top: 0;
  text-align: center;
  font-size: 24px;
  margin-bottom: 20px;
}

.modal-body {
  color: #e2e8f0;
  line-height: 1.6;
}

.modal-body ol {
  padding-left: 20px;
}

.modal-body li {
  margin-bottom: 8px;
}

.highlight {
  color: #6366f1;
  background: rgba(99, 102, 241, 0.1);
  padding: 2px 6px;
  border-radius: 4px;
}

.donate-info {
  background: rgba(99, 102, 241, 0.1);
  padding: 20px;
  border-radius: 12px;
  margin: 20px 0;
  border: 1px solid rgba(99, 102, 241, 0.2);
}

.modal-actions {
  display: flex;
  justify-content: center;
  margin-top: 10px;
}

.nick-box {
  display: flex;
  align-items: center;
  gap: 10px;
  background: rgba(30, 41, 59, 0.8);
  padding: 12px 16px;
  border-radius: 8px;
  border: 1px solid rgba(99, 102, 241, 0.3);
}

#nickText {
  font-family: 'Courier New', monospace;
  font-weight: bold;
  color: #6366f1;
  font-size: 18px;
}

.copy-btn {
  background: #6366f1;
  color: white;
  border: none;
  padding: 8px 12px;
  border-radius: 6px;
  cursor: pointer;
  font-size: 14px;
  transition: all 0.3s ease;
}

.copy-btn:hover {
  background: #5855eb;
  transform: translateY(-1px);
}

.note {
  font-style: italic;
  color: #94a3b8;
  text-align: center;
  margin-top: 20px;
}

.close {
  color: #94a3b8;
  float: right;
  font-size: 32px;
  font-weight: bold;
  cursor: pointer;
  position: absolute;
  top: 15px;
  right: 20px;
  transition: color 0.3s ease;
}

.close:hover {
  color: #f1f5f9;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideIn {
  from { 
    opacity: 0;
    transform: translateY(-50px) scale(0.9);
  }
  to { 
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* Sidebar Icons - Final Version */
.side-icon {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  font-size: 20px; /* For emoji fallback */
  line-height: 1;
}

.side-icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  display: block;
}

/* Color adjustments for dark theme */
.side-item.twitch .side-icon img { filter: brightness(0) invert(1); }
.side-item.discord .side-icon img { filter: brightness(0) invert(1); }
.side-item.donatello .side-icon img { filter: brightness(0) invert(1); }
.side-item.cristalix .side-icon img { filter: brightness(0) invert(1); }

/* When using Tabler icons instead of images */
.side-item.twitch .side-icon i,
.side-item.discord .side-icon i,
.side-item.donatello .side-icon i,
.side-item.cristalix .side-icon i { color: #ffffff; opacity: 0.95; }

/* YouTube Stream Card */
.youtube-stats-card {
    background: rgba(255, 0, 0, 0.1);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 0, 0, 0.3);
    border-radius: 16px;
    padding: 24px;
    margin-top: 32px;
}

.youtube-stats-card h3 {
    color: #ff0000;
    margin-top: 0;
    margin-bottom: 16px;
